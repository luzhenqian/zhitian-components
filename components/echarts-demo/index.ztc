<component name="ZTEchartsDemo">
  <div id="main" className="{Styles.red}"></div>
</component>

<script>
  import { init } from "echarts";
  import { onMounted, nextTick } from "@/core";

  const xAxisData = [],
    series = [];

  const { style, data } = props;

  data.forEach((d) => {
    xAxisData.push(d.x);
    const item = {
      name: d.sc,
      type: d.t,
      data: [d.y],
      barWidth: props.style.bar.width,
      itemStyle: {
        color: style.bar.color,
        borderRadius: style.bar.radius,
      },
    };
    const currentSeriesData = series.find((s) => s.name === d.sc);
    if (currentSeriesData) {
      currentSeriesData.data.push(d.y);
    } else {
      series.push(item);
    }
  });

  const option = {
    title: {
      text: "柱状图 Demo",
    },
    tooltip: {},
    legend: {
      data: series.map((s) => s.name),
    },
    xAxis: {
      data: xAxisData,
      show: style.xAxis.show,
      axisLine: {
        lineStyle: {
          color: style.xAxis.color,
        },
      },
    },
    yAxis: {},
    series: series,
    grid: {
      left: style.padding.left,
      right: style.padding.right,
      top: style.padding.top,
      bottom: style.padding.bottom,
    },
  };

  let myChart;

  onMounted(this, () => {
    myChart = init(this.el);
    myChart.setOption(option);
  });

  nextTick(() => {
    myChart.resize();
  });
</script>

<style>
  .red {
    background-color: red;
  }
</style>
