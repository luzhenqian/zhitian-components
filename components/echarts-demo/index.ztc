<component name="ZTEchartsDemo">
  <div id="main"></div>
</component>

<script>
  import { init } from "echarts";
  import { onMounted } from "@/core";

  const xAxisData = [],
    series = [];

  props.defaultData.forEach((data) => {
    xAxisData.push(data.x);
    const item = {
      name: data.sc,
      type: data.s,
      data: [data.y],
    };
    const currentSeriesData = series.find((s) => s.name === data.sc);
    if (currentSeriesData) {
      currentSeriesData.data.push(data.y);
    } else {
      series.push(item);
    }
  });

  var option = {
    title: {
      text: "ECharts 入门示例",
    },
    tooltip: {},
    legend: {
      data: series.map(s=>s.name),
    },
    xAxis: {
      data: xAxisData,
    },
    yAxis: {},
    series: series,
  };

  onMounted(() => {
    var myChart = init(document.getElementById("main"));

    myChart.setOption(option);
  });
</script>
